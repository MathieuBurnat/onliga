
@using onliga.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
    
@if (SignInManager.IsSignedIn(User))
{
    <a class="btn btn-primary" asp-controller="books" asp-action="Index">I want to read my favorite manga 😁</a>
}
</div>
@if (!SignInManager.IsSignedIn(User))
{
    <div class="card-body text-primary" style="font-style: italic;">
        Vous avez besoin d'être connecté pour accéder à la lecture d'un manga.
    </div>
}