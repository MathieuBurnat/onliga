@model IEnumerable<onliga.Models.Book>

@{
    ViewData["Title"] = "Manga";
    Layout = "../../Pages/Shared/_Layout";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    <a asp-controller="Books" asp-action="Create">Create a Manga</a> |
                    <a asp-controller="Books" asp-action="Edit">Edit</a> |
                    <a asp-controller="Books" asp-action="Details">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>